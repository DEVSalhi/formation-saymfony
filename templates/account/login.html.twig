{% extends 'base.html.twig' %}

{% block title %}Connexion au site !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1>Connecter vous !</h1>

                    {% if hasError %}
                        <div class="alert alert-danger">Une erreur est survenue </div>
                    {% endif %}
                    <form action="{{ path('login_account') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input required value="{{ username }}" type="text" class="form-control" name="_username" id="email" placeholder="Adresse email...">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input required type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe">
                        </div>
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        <a href="{{ path('account_reset') }}"> mot de passe oubli√© </a>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion !</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>

{% endblock %}
