{% set url=path("ad_show",{'slug':ad.slug}) %}
<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="car-header text-center">
            {{ ad.rooms }} chambres <strong> {{ ad.price }} euro</strong> <br>
            <small>pas encore not√©</small>
        </div>
        <a href="{{url}}">
            <img src="{{ ad.coverImage }}" alt="" style="height: 200px;width: 100%;display: block">
        </a>
        <div class="card-body">
            <a href="{{url}}">
                <h4 class="card-title">
                    {{ ad.title }}
                </h4>
            </a>
            <p class="card-text">{{ ad.introduction }}</p>
            <a href="{{url}}" class="btn btn-secondary">en savoir plus</a>
            {%  if app.user == ad.author %}
                <a href="{{ path('ads_edit',{'slug':ad.slug}) }}" class="btn btn-secondary"> Modifier l'annonce</a>
            {% endif %}
        </div>
    </div>
</div>