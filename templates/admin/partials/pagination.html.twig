<div class="d-flex justify-content-center">

    {# set current_path = app.request.get('_route') #}

    <ul class="pagination">
        <li class="page-item {% if page == 1 %} disabled {% endif %}">
            <a class="page-link" href="{{path(current_path,{'page':page-1})}}">&laquo;</a>
        </li>
        {% for i in 1..pages %}
            <li class="page-item {% if page == i %} active {% endif %}">
                <a class="page-link" href="{{path(current_path,{'page':i})}}">{{i}}</a>
            </li>
        {% endfor %}

        <li class="page-item {% if page == pages %} disabled {% endif %}">
            <a class="page-link" href="{{path(current_path,{'page':page+1})}}">&raquo;</a>
        </li>
    </ul>
</div>