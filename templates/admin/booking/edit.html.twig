{% extends 'admin/base.html.twig' %}

{% block title %}  Modifier la  reservation n {{ booking.id }}{% endblock %}

{% block body %}

<div class="container-fluid">
{{ form_start(form) }}


    <div class="row">
        <div class="col">
            {{ form_row(form.startDate) }}
            {{ form_row(form.endDate) }}
            {{ form_row(form.comment) }}
        </div>
        <div class="col">
            {{ form_row(form.booker) }}
            {{ form_row(form.ad) }}

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check"></i>
                Enregistrer les modification</button>
        </div>

    </div>
{{ form_end(form) }}
</div>
{% endblock %}